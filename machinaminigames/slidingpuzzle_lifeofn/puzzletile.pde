class PuzzleTile{
  
  
  //Variables------------------------------------------------------------------------------------------------------------------------------------
  int value, xpos, ypos;
  PImage tileimg;
 
 
 //Constructor----------------------------------------------------------------------------------------------------------------------------------
 PuzzleTile(int val, int xval, int yval){
  value = val;
  xpos = xval;
  ypos = yval;
  img = imgarray[val];
 }

  
  //Give the piece a new position---------------------------------------------------------------------------------------------------------------
  void storePos(int xval, int yval){
    xpos = xval;
    ypos = yval;
  }
  
  //UPDATE TO new image------------------------------------------------------------------------------------------------------------------
  void update(){
    img = imgarray[value];
  }

  //Give the piece a new image------------------------------------------------------------------------------------------------------------------
  void changeImg(int posval){
    value = posval;
  }
  
  
  //Send the piece's X value--------------------------------------------------------------------------------------------------------------------
  int sendX(){
    return xpos+100;
  }
  
  
  //Send the piece's Y value--------------------------------------------------------------------------------------------------------------------
  int sendY(){
    return ypos+100;
  }
  
  //Send the value--------------------------------------------------------------------------------------------------------------------
  int getValue(){
    return value;
  }
  
  //Draw the piece------------------------------------------------------------------------------------------------------------------------------
  void create(PGraphics _buffer){
    _buffer.image(img, xpos, ypos);
    _buffer.fill(0);
    _buffer.text(value,xpos+100,ypos+100);
  }
  
}